<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:layout_gravity="start">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <LinearLayout
            android:id="@+id/drawer_inbox_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/inbox_all"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:text="所有收件箱"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                style="?android:listSeparatorTextViewStyle"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/drawer_unread_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/unread"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:text="所有未读"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                style="?android:listSeparatorTextViewStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/flag_all"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:text="所有红旗"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                style="?android:listSeparatorTextViewStyle"/>
        </LinearLayout>

        <ListView
            android:id="@+id/drawer_user_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp">
        </ListView>

        <TextView
            android:text="文件夹"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"/>

        <ListView
            android:id="@+id/drawer_option_list"
            android:layout_width="match_parent"
            android:layout_height="400dp"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/plus"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:text="添加邮箱账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                style="?android:listSeparatorTextViewStyle"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>